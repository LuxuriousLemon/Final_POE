<UserControl x:Class="MyMunicipalServiceApplication.Views.User_Control.ServiceRequestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMunicipalServiceApplication.Views.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FFFFFBE6">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header Row -->
            <RowDefinition Height="*"/>
            <!-- Content Row -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Image Column -->
            <ColumnDefinition Width="3*"/>
            <!-- Details Column -->
        </Grid.ColumnDefinitions>

        <!-- Image -->
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <Image Name="ImageControl" Source="/Images/cape-town.png" Stretch="Uniform" />
        </Border>

        <!-- ID Header -->
        <TextBlock Grid.Row="0" Grid.Column="1" Name="IdTextBlock" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Margin="5" Text="ID SAMPLE" />

        <!-- Details -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
            <!-- Location Section -->
            <Border BorderBrush="#00712D" BorderThickness="0,0,0,1" Margin="0,5,0,5">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="14" Text="Location" Background="#FFFFFBE6" Margin="5"/>
                    <TextBlock Name="LocationRun" Text="SAMPLE" Background="#FFFFFBE6" Margin="5"/>
                </StackPanel>
            </Border>

            <!-- Category Section -->
            <Border BorderBrush="#00712D" BorderThickness="0,0,0,1" Margin="0,5,0,5">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="14" Text="Category" Background="#FFFFFBE6" Margin="5"/>
                    <TextBlock Name="CategoryRun" Text="SAMPLE" Background="#FFFFFBE6" Margin="5"/>
                </StackPanel>
            </Border>

            <!-- Priority Section -->
            <Border BorderBrush="#00712D" BorderThickness="0,0,0,1" Margin="0,5,0,5">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="14" Text="Priority" Background="#FFFFFBE6" Margin="5"/>
                    <TextBlock Name="PriorityRun" Text="SAMPLE" Background="#FFFFFBE6" Margin="5"/>
                </StackPanel>
            </Border>

            <!-- Status Section -->
            <Border BorderBrush="#00712D" BorderThickness="0,0,0,1" Margin="0,5,0,5">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="14" Text="Status" Background="#FFFFFBE6" Margin="5"/>
                    <TextBlock Name="StatusRun" Text="SAMPLE" Background="#FFFFFBE6" Margin="5"/>
                </StackPanel>
            </Border>

            <!-- Description Section -->
            <Border BorderBrush="#00712D" BorderThickness="0,0,0,1" Margin="0,5,0,0">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="14" Text="Description" Background="#FFFFFBE6" Margin="5"/>
                    <TextBlock Name="DescriptionRun" Text="SAMPLE" TextWrapping="Wrap" Background="#FFFFFBE6" Margin="5"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
